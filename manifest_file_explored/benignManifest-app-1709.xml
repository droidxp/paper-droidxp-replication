<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="4"
    android:versionName="2.2"
    package="com.teeterbird.crabgame">

    <uses-sdk
        android:minSdkVersion="3" />

    <uses-permission
        android:name="android.permission.WAKE_LOCK" />

    <uses-permission
        android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:label="@ref/0x7f050001"
        android:icon="@ref/0x7f020000">

        <activity
            android:label="@ref/0x7f050001"
            android:name=".CrabGameMenu"
            android:screenOrientation="1"
            android:configChanges="0x80">

            <intent-filter>

                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="Options"
            android:name=".OptionsScreen">

            <intent-filter>

                <action
                    android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:label="@ref/0x7f050001"
            android:name=".CrabGame">

            <intent-filter>

                <action
                    android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:label="Game Over Screen"
            android:name=".CrabGameOverScreen">

            <intent-filter>

                <action
                    android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="0xb0" />

        <meta-data
            android:name="ADMOB_PUBLISHERS_ID"
            android:value="a14dfa8b0dc21e0" />
    </application>
</manifest>
