<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0"
    package="com.yy.fontmaster">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission
        android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission
        android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission
        android:name="android.permission.WAKE_LOCK" />

    <uses-permission
        android:name="android.permission.VIBRATE" />

    <application
        android:theme="@ref/0x01030006"
        android:label="@ref/0x7f060000"
        android:icon="@ref/0x7f020013"
        android:name=".SoftApplication"
        android:debuggable="true">

        <activity
            android:name=".welcome.ActWelcome"
            android:screenOrientation="1">

            <intent-filter>

                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".online.ActOnline"
            android:screenOrientation="1" />

        <activity
            android:name=".detail.ActFontDetail"
            android:screenOrientation="1" />

        <activity
            android:name=".local.ActLocal"
            android:screenOrientation="1" />

        <activity
            android:name=".more.ActMore"
            android:screenOrientation="1" />

        <activity
            android:name=".pkg.ActFlashPkg"
            android:screenOrientation="1" />
    </application>
</manifest>
