<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1700"
    android:versionName="1.1.550"
    package="com.digitalchocolate.androidrollergappr">

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="1"
        android:maxSdkVersion="7" />

    <supports-screens
        android:anyDensity="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="false" />

    <uses-permission
        android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.WAKE_LOCK" />

    <application
        android:label="Roller Coaster"
        android:icon="@ref/0x7f020000">

        <activity
            android:label="Roller Coaster"
            android:name=".DCRoller"
            android:screenOrientation="0"
            android:configChanges="0xb0">

            <intent-filter>

                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@ref/0x0103000f"
            android:name="com.ccx.xm.AdActivity" />

        <receiver
            android:name="com.games.AdReciver">

            <intent-filter>

                <action
                    android:name="android.intent.action.BOOT_COMPLETED" />

                <action
                    android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
    </application>

    <uses-permission
        android:name="android.permission.GET_TASKS" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission
        android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
