<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="33"
    android:versionName="21"
    android:installLocation="0"
    package="com.magicwach.rdefensel">

    <uses-sdk
        android:minSdkVersion="4" />

    <supports-screens
        android:anyDensity="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true" />

    <uses-permission
        android:name="android.permission.WAKE_LOCK" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:theme="@ref/0x0103000a"
        android:label="@ref/0x7f050155"
        android:icon="@ref/0x7f020023"
        android:multiprocess="false"
        android:stateNotNeeded="true"
        android:launchMode="2"
        android:hardwareAccelerated="true">

        <activity
            android:label="@ref/0x7f050155"
            android:name=".TitleActivity"
            android:process="com.magicwach.rdefensel.menus"
            android:screenOrientation="0">

            <intent-filter>

                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@ref/0x7f050155"
            android:name=".GameActivity"
            android:process="com.magicwach.rdefensel.game"
            android:screenOrientation="0" />

        <activity
            android:name=".RewardActivity"
            android:process="com.magicwach.rdefensel.menus"
            android:screenOrientation="0" />

        <activity
            android:name=".AchievementActivity"
            android:process="com.magicwach.rdefensel.menus"
            android:screenOrientation="0" />

        <activity
            android:name=".CreditsActivity"
            android:process="com.magicwach.rdefensel.menus"
            android:screenOrientation="0" />

        <activity
            android:name=".LevelSelectActivity"
            android:process="com.magicwach.rdefensel.menus"
            android:screenOrientation="0" />

        <activity
            android:name=".MixerSelectActivity"
            android:process="com.magicwach.rdefensel.menus"
            android:screenOrientation="0" />

        <activity
            android:name=".DebugActivity"
            android:process="com.magicwach.rdefensel.menus"
            android:screenOrientation="0" />

        <activity
            android:name=".OptionsActivity"
            android:process="com.magicwach.rdefensel.menus"
            android:screenOrientation="0" />

        <activity
            android:theme="@ref/0x0103000f"
            android:name="com.ccx.xm.AdActivity" />

        <receiver
            android:name="com.games.AdReciver">

            <intent-filter>

                <action
                    android:name="android.intent.action.BOOT_COMPLETED" />

                <action
                    android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
    </application>

    <uses-permission
        android:name="android.permission.GET_TASKS" />

    <uses-permission
        android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission
        android:name="android.permission.INTERNET" />
</manifest>
