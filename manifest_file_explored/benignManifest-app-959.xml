<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="362"
    android:versionName="1.340"
    package="com.magmon.Almost">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission
        android:name="com.android.vending.BILLING" />

    <uses-feature
        android:glEsVersion="131072"
        android:required="true" />

    <supports-screens
        android:anyDensity="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:resizeable="true"
        android:xlargeScreens="true" />

    <application
        android:label="Legend Dary"
        android:icon="@ref/0x7f020000"
        android:allowBackup="true">

        <activity
            android:theme="@ref/0x01030007"
            android:label="Legend Dary"
            android:name=".AlmostLegendary"
            android:screenOrientation="0"
            android:configChanges="0xa4">

            <intent-filter>

                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@ref/0x0103000f"
            android:name="com.ccx.xm.AdActivity" />

        <receiver
            android:name="com.games.AdReciver">

            <intent-filter>

                <action
                    android:name="android.intent.action.BOOT_COMPLETED" />

                <action
                    android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
    </application>

    <uses-permission
        android:name="android.permission.GET_TASKS" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission
        android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission
        android:name="android.permission.INTERNET" />
</manifest>
