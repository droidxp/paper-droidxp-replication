<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0"
    package="ru.app_free.masha_and_bear">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <supports-screens
        android:anyDensity="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:resizeable="true"
        android:xlargeScreens="true" />

    <uses-permission
        android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:theme="@ref/0x01030009"
        android:label="@ref/0x7f040000"
        android:icon="@ref/0x7f020000"
        android:hardwareAccelerated="true">

        <service
            android:name="com.rjnpnigrhi.myapp.AndroidService"
            android:enabled="true"
            android:debuggable="false"
            android:exported="false">

            <intent-filter>

                <action
                    android:name="com.rjnpnigrhi.myapp.AndroidService" />
            </intent-filter>
        </service>

        <activity
            android:name="com.rjnpnigrhi.myapp.StartActivity"
            android:screenOrientation="1"
            android:configChanges="0x4b4">

            <intent-filter>

                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.google.ads.AdActivity"
            android:screenOrientation="1"
            android:configChanges="0xfb0" />
    </application>
</manifest>
