<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="4"
    android:versionName="2.1"
    package="com.tictacxox">

    <supports-screens
        android:anyDensity="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:resizeable="true"
        android:xlargeScreens="true" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission
        android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:theme="@ref/0x7f070001"
        android:label="@ref/0x7f060000"
        android:icon="@ref/0x7f020007"
        android:name="com.example.tictacxox.TicTacXOX"
        android:allowBackup="true">

        <activity
            android:theme="@ref/0x01030007"
            android:label="@ref/0x7f060000"
            android:name="com.example.tictacxox.MainActivity"
            android:screenOrientation="1">

            <intent-filter>

                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@ref/0x01030007"
            android:label="@ref/0x7f060003"
            android:name="com.example.tictacxox.HomeActivity"
            android:screenOrientation="1" />

        <activity
            android:theme="@ref/0x01030007"
            android:label="@ref/0x7f060004"
            android:name="com.example.tictacxox.PlayActivity"
            android:screenOrientation="1" />

        <activity
            android:theme="@ref/0x01030007"
            android:label="@ref/0x7f060005"
            android:name="com.example.tictacxox.SettingsActivity"
            android:screenOrientation="1" />

        <activity
            android:theme="@ref/0x01030007"
            android:label="@ref/0x7f060006"
            android:name="com.example.tictacxox.ScoresActivity"
            android:screenOrientation="1" />

        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="0xfb0" />

        <activity
            android:theme="@ref/0x01030007"
            android:label="@ref/0x7f060007"
            android:name="com.example.tictacxox.NPlayerActivity"
            android:screenOrientation="1" />

        <activity
            android:theme="@ref/0x01030007"
            android:label="@ref/0x7f060008"
            android:name="com.example.tictacxox.LevelActivity"
            android:screenOrientation="1" />
    </application>
</manifest>
